    "window_seconds": 3600,
    "price_cap": 0.48,
    "confirm_delay_seconds": 150,
    "cap_min_ticks": 1
  },
  "day_night": {
    "day_start_hour": 8,
    "day_end_hour": 22,
    "base_day_min_quality": 35.0,
    "base_night_min_quality": 35.0,
    "switch_streak_at": 5,
    "strict_day_q": "p90",
    "strict_night_q": "p95",
    "night_max_win_streak": 5,
    "night_autotrade_enabled": true,
    "night_session_mode": "SOFT"
  },
  "ta": {
    "warmup_seconds": 21600,
    "adx_period": 14,
    "ema50_slope_bars": 6,
    "anchor_scale": 10000.0,
    "w_anchor": 1.0,
    "w_adx": 0.2,
    "w_slope": 0.2,
    "trend_bonus": 1.1,
    "trend_penalty": 0.7
