  "apis": {
    "gamma": {
      "base_url": "https://gamma-api.polymarket.com",
      "timeout": 30,
      "retries": 3,
      "backoff": 2.0
    },
    "clob": {
      "base_url": "https://clob.polymarket.com",
      "timeout": 30,
      "retries": 3,
      "backoff": 2.0
    },
    "binance": {
      "base_url": "https://api.binance.com",
      "timeout": 30,
      "retries": 3,
      "backoff": 2.0
    }
  },
  "telegram": {
    "admin_user_ids": [433481866],
    "message_rate_limit_per_minute": 20
  },
  "storage": {
    "driver": "sqlite",
    "dsn": "sqlite:///data/martin.db"
  },
  "risk": {
    "stake": {
      "mode": "fixed",
      "base_amount_usdc": 1.0
    }
  },
  "execution": {
    "mode": "live",
    "live": {
      "chain_id": 137,
      "order_timeout_seconds": 30,
      "max_slippage": 0.02
    }
  },
  "rolling_quantile": {
    "rolling_days": 14,
    "max_samples": 500,
    "min_samples": 50,
    "strict_fallback_mult": 1.25
